<%= render "search/search_form" %>

<div class="row">
	<div class="col-xs-3 sidebar">
		<% @categories.each do |category| %>
			<table class="table">
				<tr><%= link_to category.name, boards_path(category_id: category.id) %></tr>
			</table>
		<% end %>
	</div>

<div class="col-xs-8 mypage-edit">
	<%= form_with(model: current_user, url: user_path, method: :put, local: true) do |f| %>
	<div class="form-group">
		<%= f.label :なまえ %>
		<%= f.text_field :name, class: "form-control" %>
	</div>
	<div class="form-group">
		<%= f.label :自己紹介 %>
		<%= f.text_area :introduction, class: "form-control" %>
	</div>
	<button class="btn btn-default" type="submit">保存</button>
	<% end %>

</div>
<div class="col-xs-8 main-top">
	<% @boards.each do |board| %>
		<table class="table">
			<tr>
				<%= link_to board_path(board) do %>
					<% board.board_categories.each do |board_category| %>
						【<%= board_category.category.name %>】<% end %>
					<%= board.title %>
					[<%= board.user.name %>]
					(<%= board.responses.count %>)
				<% end %>
			</tr>
		</table>
	<% end %>

	<div style="text-align: center;">
		<%= paginate @boards %>
	</div>
</div>